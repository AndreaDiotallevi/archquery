    "express-promise-router": "^3.0.3",
    "mongoose": "^5.9.6",
    "pg": "^8.0.3"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
