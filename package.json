{
  "name": "archquery",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "12.16.1",
    "npm": "6.13.4"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "test": "jest --detectOpenHandles --watch",
